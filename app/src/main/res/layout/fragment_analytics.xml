<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context="com.example.karanbatra.productiveninja.activity.AnalyticsFragment">


    <TextView
        android:id="@+id/label"
        android:layout_marginTop="38dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#E3F2FD"
        android:textSize="45dp"
        android:text="@string/nav_item_analytics"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social"
        android:textSize="35dp"
        android:textColor="#E3F2FD"

        android:id="@+id/social_textview"
        android:layout_below="@+id/label"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="59dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:id="@+id/social_textview_value"
        android:textColor="#FFF"
        android:hint="0:0:0"
        android:textColorHint="#FFF"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/social_textview"
        android:layout_alignStart="@+id/social_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media"
        android:textSize="35dp"
        android:textColor="#FFF"
        android:id="@+id/media_textview"
        android:layout_alignTop="@+id/social_textview"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textColor="#FFF"
        android:id="@+id/media_textview_value"
        android:hint="0:0:0"
        android:textColorHint="#FFF"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/social_textview_value"
        android:layout_alignStart="@+id/media_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Communication"
        android:textSize="35dp"
        android:textColor="#FFF"
        android:id="@+id/communication_textview"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/social_textview_value"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textColor="#FFF"
        android:id="@+id/communication_textview_value"
        android:hint="0:0:0"
        android:textColorHint="#FFF"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/communication_textview"
        android:layout_centerHorizontal="true" />


</RelativeLayout>